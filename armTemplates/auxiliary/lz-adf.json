{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "topLevelManagementGroupPrefix": {
            "type": "string",
            "maxLength": 10,
            "metadata": {
                "description": "Provide a prefix (max 10 characters, unique at tenant-scope) for the Management Group hierarchy and other resources created as part of Enterprise-scale."
            }
        },
        "name": {
            "type": "string",
            "defaultValue": "myv2datafactory"
        },
        "onlineSubscriptionId": {
            "type": "array",
            "defaultValue": []
        },
        "enableLzAdf": {
            "type": "string",
            "defaultValue": "Yes",
            "allowedValues": [
                "Yes",
                "No"
            ]
        }        
    },
    "variables": {
        "adfRegion": "[deployment().location]",
        "rgName": "[concat(parameters('topLevelManagementGroupPrefix'), '-data')]",
        "resourceDeploymentName": "[take(concat('EntScale-data', deployment().name), 64)]"
    },
    "resources": [
        {
            "condition": "[equals(parameters('enableLzAdf'), 'Yes')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-05-10",
            "name": "[variables('resourceDeploymentName')]",
            "location": "[variables('adfRegion')]",
            "subscriptionId": "[parameters('onlineSubscriptionId')[0]]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "http://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "type": "Microsoft.Resources/resourceGroups",
                            "apiVersion": "2019-10-01",
                            "name": "[variables('rgName')]",
                            "location": "[variables('adfRegion')]",
                            "properties": {}
                        },
                        {
                            "type": "Microsoft.Resources/deployments",
                            "apiVersion": "2019-10-01",
                            "resourceGroup": "[variables('rgName')]",
                            "name": "data-factory",
                            "dependsOn": [
                                "[resourceId('Microsoft.Resources/resourceGroups/', variables('rgName'))]"
                            ],
                            "properties": {
                                "mode": "Incremental",
                                "template": {
                                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                                    "contentVersion": "1.0.0.0",
                                    "parameters": {},
                                    "variables": {},
                                    "resources": [
                                        {
                                            "apiVersion": "2018-06-01",
                                            "name": "[parameters('name')]",
                                            "location": "[variables('adfRegion')]",
                                            "type": "Microsoft.DataFactory/factories",
                                            "identity": {
                                                "type": "SystemAssigned"
                                            },
                                            "properties": {}
                                        }
                                    ],
                                    "outputs": {}
                                }
                            }
                        }
                    ],
                    "outputs": {}
                }
            }
        }
    ],
    "outputs": {}
}
